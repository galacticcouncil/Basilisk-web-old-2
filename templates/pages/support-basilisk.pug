extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    .container.px-3.text-center
        .header-background
        .support-basilisk-title-wrapper
            .headline-2.text-uppercase.support-basilisk-title Support Basilisk to Become a Parachain
        .infographic-item
            span.infographic-text=__('supportBasilisk1')
            img.infographic-img(src=url('images/infographic-1.svg'))
        .infographic-item
            img.infographic-img(src=url('images/infographic-2.svg'))
            span.infographic-text=__('supportBasilisk2')
        .infographic-item
            span.infographic-text=__('supportBasilisk3')
            img.infographic-img(src=url('images/infographic-3.svg'))
        .infographic-item
            img.infographic-img(src=url('images/infographic-4.svg'))
            span.infographic-text=__('supportBasilisk4')
    .container.px-3.learn-how-to-support.text-center
        .headline-2.text-uppercase.support-basilisk-title.pb-5=__('learnHowToSupport')
        span.learn-how-to-support-content=__('getBSXToken')
        .btn-wrapper
            a.btn.btn-support-basilisk.btn__md(href=pageLinks.supportBasilisk.url target=pageLinks.supportBasilisk.target)=__('supportBasilisk')
            a.btn.btn-support-basilisk.btn__md(href=pageLinks.supportBasiliskLearnMore.url target=pageLinks.supportBasiliskLearnMore.target)=__('learnMoreAboutParachains')
